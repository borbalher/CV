doctype html
html
  head
    title!= title
    link(href='/css/main.css', rel='stylesheet')
    link(href='/css/normalize.css', rel='stylesheet')
    script(href='/js/third-parties/modernizr.js')
  body
    #main-container
      #paralax-sections(data-0="transform:translate(0%,0%);" data-50p="" data-150p="transform:translate(0%,-50%);" data-200p="" data-300p="transform:translate(0%,-100%);" data-350p="" data-450p="transform:translate(-50%,-100%);" data-500p="" data-600p="transform:translate(0%,-150%);")
        #landing.paralax-section
          div#intro
            p #{intro}
            div.cf
          nav#menu-nav
            ul#menu
              li
                a(href="#about-me") #{about}
              li
                a(href="#work") #{work}
              li
                a(href="#contact") #{contact}
        #about-me.paralax-section
        #formation.paralax-section
        #work.paralax-section
        #contact.paralax-section
    #helper
      .marker.orange
      .marker.red
      .marker.blue
      .marker.green
      .marker.yellow
    script(src='/js/skrollr.js')
    script(src='/js/skrollr-ie.js')
    script(src='/js/skrollr-menu.js')
    script(src='/js/skrollr-stylesheets.js')
    script(src='/js/load-skrollr.min.js')
